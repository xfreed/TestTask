@using WebApplication1.Models.DBModel

@model Tuple<Cv,List<Cv>>

<div class="container-fluid">

    <div class="data-table-wrapper">
        <div class="cust_bloglistintro ">
            <h1 id="action-title" class="text-center-action decision-heading">Рішення керівних органів</h1>
        </div>

        <table id="dtReadDecision" class="table table-striped table-bordered table-lg table-responsive-lg" cellspacing="0">
            <thead>
                <tr class="decision-menu">
                    <th class="th-sm">
                        ID
                    </th>
                    <th class="th-sm">
                        Name
                    </th>
                    <th class="th-sm">
                        Date of birth
                    </th>
                    <th class="th-sm">
                        Married
                    </th>
                    <th class="th-sm">
                        Phone
                    </th>
                    <th class="th-sm">
                        Salary
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Item2)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Birthday.ToString("dd-MM-yyyy")</td>
                        <td>
                            @if (item.Married)
                            {
                                <p>Married</p>
                            }
                            else
                            {
                                <p>Alone</p>
                            }
                        </td>
                        <td>@item.Phone</td>
                        <td>@item.Salary</td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div id="CreateDecisionModal" role="dialog" tabindex="-1" class="modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <partial name="~/Views/Home/_CreateCv.cshtml" model="Model.Item1" />
        </div>
    </div>
</div>
<div id="EditDecisionModal" role="dialog" tabindex="-1" class="modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <partial name="~/Views/Home/_EditCv.cshtml" />
        </div>
    </div>
</div>
<div id="DeleteDecisionModal" role="dialog" tabindex="-1" class="modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <partial name="~/Views/Home/_DeleteCv.cshtml" />
        </div>
    </div>
</div>